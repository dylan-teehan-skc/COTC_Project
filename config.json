{
  "app": {
    "name": "Metrics Monitor",
    "version": "1.0.0"
  },
  "logging": {
    "targets": {
      "file": {
        "enabled": false,
        "path": "src/metrics_monitoring/logs/monitoring_metrics.log",
        "level": "DEBUG",
        "format": "%(asctime)s - %(levelname)s - %(message)s"
      },
      "console": {
        "enabled": true,
        "level": "INFO",
        "format": "%(levelname)s: %(message)s",
        "colors": {
          "DEBUG": "BLUE",
          "INFO": "GREEN",
          "WARNING": "YELLOW",
          "ERROR": "RED",
          "CRITICAL": "RED"
        },
        "use_colors": true
      }
    }
  },
  "monitoring": {
    "update_interval": 10,
    "System": {
      "cpu_usage": {
        "enabled": true
      },
      "memory_usage": {
        "enabled": true
      }
    },
    "Crypto": {
      "xrp": {
        "enabled": true,
        "api_url": "${BINANCE_XRP_URL}"
      },
      "btc": {
        "enabled": true,
        "api_url": "${BINANCE_BTC_URL}"
      }
    }
  },
  "server": {
    "url": "${PYTHONAWAY_URL}"
  }
} 