{
  "app": {
    "name": "Metrics Monitor",
    "version": "1.0.0"
  },
  "logging": {
    "targets": {
      "file": {
        "enabled": true,
        "path": "src/metrics_monitoring/logs/monitoring_metrics.log",
        "level": "DEBUG",
        "format": "%(asctime)s - %(levelname)s - %(message)s"
      },
      "console": {
        "enabled": true,
        "level": "INFO",
        "format": "%(levelname)s: %(message)s",
        "colors": {
          "DEBUG": "BLUE",
          "INFO": "GREEN",
          "WARNING": "YELLOW",
          "ERROR": "RED",
          "CRITICAL": "RED"
        },
        "use_colors": true
      }
    }
  },
  "monitoring": {
    "update_interval": 10,
    "system_metrics": {
      "enabled": true,
      "metrics": ["cpu_usage", "memory_usage"]
    },
    "xrp": {
      "enabled": true,
      "api_url": "https://api.binance.com/api/v3/ticker/price?symbol=XRPEUR"
    },
    "btc": {
      "enabled": true,
      "api_url": "https://api.binance.com/api/v3/ticker/price?symbol=BTCEUR"
    }
  },
  "server": {
    "url": "https://dylanteehan.pythonanywhere.com/metrics"
  }
} 